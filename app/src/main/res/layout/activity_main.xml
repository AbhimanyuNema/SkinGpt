<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skinbg"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/headerfile"
        app:menu="@menu/sidemenu" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="420dp"
            android:layout_height="62dp"
            android:background="@color/tiakarang"

            android:textAlignment="center"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Display1"
            app:subtitleTextColor="#FF5722"
            app:title="SkinGpt"
            app:titleMargin="4dp"
            app:titleMarginEnd="45dp"
            app:titleMarginStart="100dp"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
            app:titleTextColor="@color/black"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="2dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="358dp"
            android:layout_height="44dp"
            android:text="How To Use Our App"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.028" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="371dp"
            android:layout_height="64dp"
            android:textColor="@color/black"
            android:text="1.Firstly our user must create an account in Skin GPT App or Log in to it."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.093" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="383dp"
            android:layout_height="57dp"
            android:textColor="@color/black"
            android:text="2.Then after that the user will be redirected to the home page of the app."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.019" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="389dp"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="3.So after it the user may use the main feature skin  disease detection."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.041" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="394dp"
            android:layout_height="49dp"
            android:textColor="@color/black"
            android:text=" 4.The would need to click the Picture of the infected area."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.041" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="416dp"
            android:layout_height="55dp"
            android:text=" 5.Then the user will be redirected to another where he will get to know about the disease."
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.041" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="404dp"
            android:layout_height="58dp"
            android:text="6.So after it the user can explore the blog section, Epi-Care Tips section for additional care and knowledge."
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.132" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="426dp"
            android:layout_height="80dp"
            android:text=" 7.Also the user can contact us through Contact page and also know about our team through About us page."
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.432" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.drawerlayout.widget.DrawerLayout>