<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/tiakarang">


    <LinearLayout
        android:id="@+id/rel1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="37dp"
        android:background="@color/black"
        android:elevation="2dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take action"
            android:textSize="17sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cam"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/baseline_photo_camera_24"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:id="@+id/card1"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/white">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/gifview"
            android:scaleType="fitCenter"
            android:src="@drawable/loginbkg2"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:id="@+id/demotext"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:text="First import your image using camera"
                android:textColor="@color/black"
                android:lineSpacingMultiplier="0.9"
                android:textSize="14sp"
                android:justificationMode="inter_word"
                tools:targetApi="o"/>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:id="@+id/demoimg"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:rotation="-20"
                android:visibility="gone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YOUR SKIN DISEASE IS"
                android:textSize="19sp"
                android:id="@+id/classified"
                android:includeFontPadding="false"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/green"
                android:textSize="24sp"
                android:id="@+id/result"
                android:clickable="true"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:includeFontPadding="true"
                android:letterSpacing="0.6"
                android:layout_marginEnd="16dp"
                android:focusable="true" />
            <TextView
                android:id="@+id/clickhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click on result to know more..."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:letterSpacing="0.6"
                android:layout_marginTop="8dp"/>



        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>